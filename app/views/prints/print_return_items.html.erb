<%= javascript_include_tag "/ckeditor/ckeditor" %>

<p style='width: 90%'>
  <textarea cols='80' id='editor1' name="editor1" rows="10">
    <%= stylesheet_link_tag "printing", :media => "all" %>
    <div class="page" id="page0">
      <div class="form">
        <h1>东莞市三江汇聚服装有限公司</h1>
        <h2>退车单明细</h2>
        <div class="table">
          <table border=1 width=100%>
              <tr>
                <td width=5%>ID</td>
                <td>退车单日期</td>
                <td>衣车名称及类型</td>
                <td>款号</td>
                <td>车行</td>
                <td>部门</td>
                <td>退车数量</td>
                <td>租车日期</td>
                <td>预计退还日期</td>
                <td>实际退还日期</td>
                <td>经手人</td>
                <td>车行经手人</td>
                <td>退车状态</td>
                <td>付款状态</td>
                <td>价格</td>
                <td>合计</td>
                <td>备注</td>
              </tr>
                  <% can_view_price = true %>
                  <% @return_items.each_with_index do |item, index| %>
                    <tr>
                      <td><%= item.id %></td>
                      <td><%= item.sew_return_order.create_date %></td>
                      <td><%= item.sew_name %></td>
                      <td><%= item.cloth_number %></td>
                      <td><%= item.garage %></td>
                      <td><%= item.department %></td>
                      <td><%= item.count %></td>
                      <td><%= item.hire_date %></td>
                      <td><%= item.expect_return_date %></td>
                      <td><%= item.return_date %></td>
                      <td><%= item.return_person %></td>
                      <td><%= item.sew_dealer %></td>
                      <td><%= item.return_order_state %></td>
                      <td><%= item.state_cn %></td>
                      <td><%= can_view_price ? item.price : "--" %></td>
                      <td><%= can_view_price ? item.total_price : "--" %></td>
                      <td><%= item.remark %></td>
                    </tr>
                <% end %>
          </table>
        </div>
      </div>
    <div>
  </textarea>
</p>
<%= javascript_include_tag "/ckeditor/replace" %>



